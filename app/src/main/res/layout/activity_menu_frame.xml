<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">

    <include
        layout="@layout/content_floda_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.nambimobile.widgets.efab.ExpandableFabLayout

        android:id="@+id/expandable_fab_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <com.nambimobile.widgets.efab.ExpandableFab
            android:id="@+id/button_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:efab_closingAnticipateTension="0"
            app:efab_firstFabOptionMarginPx="135"
            app:efab_successiveFabOptionMarginPx="110"
            app:efab_color="@color/accent"
            app:efab_icon="@drawable/leaf"
           app:efab_iconAnimationRotationDeg="-225" />

        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/_01_atomic"
            app:label_text="Nowy hub"
           app:label_backgroundColor="@color/colorPrimary"
            app:label_textColor="@color/colorAccent"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/_01_atomic"
            app:label_text="Nowe urzÄ…dzenie"
            app:label_backgroundColor="@color/colorPrimary"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/_01_atomic"
            app:label_text="Nowy gatunek"
            app:label_backgroundColor="@color/colorPrimary"/>

    </com.nambimobile.widgets.efab.ExpandableFabLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>